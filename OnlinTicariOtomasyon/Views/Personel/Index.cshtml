@using OnlinTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Id</th>
        <th>Personel Adı</th>
        <th>Personel Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>
    @foreach (var k in Model)
    {

<tr>
    <td>
        @k.PersonelId
    </td>
    <td>
        @k.PersonelAd
    </td>
    <td>
        @k.PersonelSoyad
    </td>
    <td>
        <img src="@k.PersonelGorsel" style="width:100px; height:100px; "  />
    </td>
    <td>
        @k.Departman.DepartmanAd
    </td>
    <td><a href="/Personel/PersonelGetir/@k.PersonelId" class="btn  btn-success">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" 
           class="btn  btn-success" style="background-color:lightcoral; color:white;">Detaylar</a></td>
</tr>
    }
</table>

<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>



