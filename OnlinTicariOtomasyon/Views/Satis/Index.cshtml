@using OnlinTicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplat Fiyat</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.Satisid
            </td>
            <td>
                @k.Urun.UrunAd
            </td>
            <td>
                @k.Cariler.CariAd @k.Cariler.CariSoyad
            </td>
            <td>
                @k.Personel.PersonelAd @k.Personel.PersonelSoyad
            </td>
            <td>
                @k.Adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamTutar
            </td>
            <td>
                @k.Tarih
            </td>
            <td><a href="/Satis/SatisGetir/@k.Satisid" class="btn  btn-success">Güncelle</a></td>
            <td>
                <a href="/Satis/SatisDetay/@k.Satisid"
                   class="btn  btn-success" style="background-color:lightcoral; color:white;">Detaylar</a>
            </td>
        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>



